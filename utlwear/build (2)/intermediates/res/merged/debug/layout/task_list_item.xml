<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id='@+id/task_list_linear_layout'
    android:layout_width="match_parent"
    android:layout_height='wrap_content'
    android:orientation="horizontal"
    android:scaleX="0.8"
    android:scaleY="0.8"
    android:alpha="0.6"
>

    <ImageView
        android:id="@+id/task_list_item_image"
        android:layout_height="52dp"
        android:layout_width="52dp"
        android:src='@drawable/checkbox_cyan'
    />

    <TextView
        android:id="@+id/task_list_item_text"
        android:gravity="center_vertical"
        android:layout_height="52dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
    />
</LinearLayout><!-- From: file:/C:/GDrive-dnicholson/Work/Android_Projects/UTL/utlwear/src/main/res/layout/task_list_item.xml -->