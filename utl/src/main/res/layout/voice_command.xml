<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background='?attr/main_background_color'>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation='horizontal'
        android:layout_marginTop="12dp"
    >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
        />
        <TextView
            android:id='@+id/voice_comm_intro'
            android:layout_width='0dp'
            android:layout_height='wrap_content'
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity='center_horizontal'
            android:textSize='?attr/utl_font_size_large'
            android:text='@string/voice_command_intro'
        />
        <ImageView
            android:id='@+id/voice_comm_bluetooth'
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src='?attr/bluetooth'
        />
    </LinearLayout>



    <RelativeLayout 
        android:id='@+id/voice_comm_mic_container'
        android:layout_width='144dp'
        android:layout_height='144dp'
        android:layout_marginTop="14dp"
        android:layout_marginBottom='24dp'
        android:layout_gravity='center_horizontal'
    >
    	<ImageView
    	    android:id='@+id/voice_comm_mic'
    	    android:layout_width='64dp'
	        android:layout_height='64dp'
	        android:layout_centerInParent='true'
	        android:src='?attr/ab_microphone_inv'
	    />
    	
    	<ImageView 
    	    android:id='@+id/voice_comm_mic_ring1'
    	    android:layout_width='91dp'
	        android:layout_height='91dp'
	        android:layout_centerInParent='true'
	        android:src='?attr/mic_ring'
	        android:scaleType="fitXY"
    	/>
    	
    	<ImageView 
    	    android:id='@+id/voice_comm_mic_ring2'
    	    android:layout_width='118dp'
	        android:layout_height='118dp'
	        android:layout_centerInParent='true'
	        android:src='?attr/mic_ring'
	        android:scaleType="fitXY"
    	/>

    	<ImageView 
    	    android:id='@+id/voice_comm_mic_ring3'
    	    android:layout_width='144dp'
	        android:layout_height='144dp'
	        android:layout_centerInParent='true'
	        android:src='?attr/mic_ring'
	        android:scaleType="fitXY"
    	/>
    	
    	<ImageButton
	        android:id='@+id/voice_comm_mic_button'
	        android:layout_width='wrap_content'
	        android:layout_height='wrap_content'
	        android:layout_centerInParent='true'
	        android:minWidth='96dp'
	        android:minHeight='72dp'
			app:backgroundTint='?attr/colorPrimary'
	        android:src='?attr/ab_microphone'
	    />
    </RelativeLayout>
    
    <View
        android:layout_width='match_parent'
        android:layout_height='1px'
        android:background='?attr/list_divider_color'
    />
    
    <!-- A bar containing tabs: -->
    <LinearLayout
	    android:id='@+id/edit_task_section_bar'
	    android:layout_width='fill_parent'
	    android:layout_height='64dp'
	    android:orientation='horizontal'
	    android:background="?attr/save_cancel_bar_background"
	>
    	<RelativeLayout
		    android:id='@+id/voice_comm_tab_create'
		    android:layout_width='72dp'
		    android:layout_height='match_parent'
		    android:layout_gravity='bottom'
		>
			<TextView
			    android:id='@+id/voice_comm_tab_create_txt'
			    android:layout_width='match_parent'
			    android:layout_height='match_parent'
			    android:background='?attr/cb_button_bg'
			    android:paddingTop='10dp'
			    android:paddingBottom='10dp'
			    android:paddingLeft='2dp'
			    android:paddingRight='2dp'
			    android:gravity='center'
			    android:text='@string/Create_Tasks'
			    android:textColor='?attr/utl_text_color'
			/>
		    <View
		        android:id='@+id/voice_comm_tab_create_underline'
		        android:layout_width='match_parent'
		        android:layout_height='6dp'
		        android:layout_alignBottom='@id/voice_comm_tab_create_txt'
		        android:background='?attr/task_editor_section_highlight_color'
		    />
		</RelativeLayout>
		<View
		    android:layout_width='1px'
		    android:layout_height='match_parent'
		    android:background='?attr/list_divider_color'
		/>
    	<RelativeLayout
		    android:id='@+id/voice_comm_tab_modify'
		    android:layout_width='72dp'
		    android:layout_height='match_parent'
		    android:layout_gravity='bottom'
		>
			<TextView
			    android:id='@+id/voice_comm_tab_modify_txt'
				android:layout_width='match_parent'
				android:layout_height='match_parent'
				android:background='?attr/cb_button_bg'
				android:paddingTop='10dp'
				android:paddingBottom='10dp'
				android:paddingLeft='2dp'
				android:paddingRight='2dp'
				android:gravity='center'
			    android:text='@string/Modify_Tasks'
			    android:textColor='?attr/utl_text_color'
			/>
		    <View
		        android:id='@+id/voice_comm_tab_modify_underline'
		        android:layout_width='match_parent'
		        android:layout_height='6dp'
		        android:layout_alignBottom='@id/voice_comm_tab_modify_txt'
		        android:background='?attr/task_editor_section_highlight_color'
		    />
		</RelativeLayout>
		<View
		    android:layout_width='1px'
		    android:layout_height='match_parent'
		    android:background='?attr/list_divider_color'
		/>
    	<RelativeLayout
		    android:id='@+id/voice_comm_tab_read'
		    android:layout_width='72dp'
		    android:layout_height='match_parent'
		    android:layout_gravity='bottom'
		>
			<TextView
			    android:id='@+id/voice_comm_tab_read_txt'
				android:layout_width='match_parent'
				android:layout_height='match_parent'
				android:background='?attr/cb_button_bg'
				android:paddingTop='10dp'
				android:paddingBottom='10dp'
				android:paddingLeft='2dp'
				android:paddingRight='2dp'
				android:gravity='center'
			    android:text='@string/Read_Tasks'
			    android:textColor='?attr/utl_text_color'
			/>
		    <View
		        android:id='@+id/voice_comm_tab_read_underline'
		        android:layout_width='match_parent'
		        android:layout_height='6dp'
		        android:layout_alignBottom='@id/voice_comm_tab_read_txt'
		        android:background='?attr/task_editor_section_highlight_color'
		    />
		</RelativeLayout>
		<View
		    android:layout_width='1px'
		    android:layout_height='match_parent'
		    android:background='?attr/list_divider_color'
		/>
    	<RelativeLayout
		    android:id='@+id/voice_comm_tab_other'
		    android:layout_width='72dp'
		    android:layout_height='match_parent'
		    android:layout_gravity='bottom'
		>
			<TextView
			    android:id='@+id/voice_comm_tab_other_txt'
				android:layout_width='match_parent'
				android:layout_height='match_parent'
				android:background='?attr/cb_button_bg'
				android:paddingTop='10dp'
				android:paddingBottom='10dp'
				android:paddingLeft='2dp'
				android:paddingRight='2dp'
				android:gravity='center'
			    android:text='@string/Other'
			    android:textColor='?attr/utl_text_color'
			/>
		    <View
		        android:id='@+id/voice_comm_tab_other_underline'
		        android:layout_width='match_parent'
		        android:layout_height='6dp'
		        android:layout_alignBottom='@id/voice_comm_tab_other_txt'
		        android:background='?attr/task_editor_section_highlight_color'
		    />
		</RelativeLayout>
		<View
		    android:layout_width='1px'
		    android:layout_height='match_parent'
		    android:background='?attr/list_divider_color'
		/>
	</LinearLayout>
    
    <androidx.viewpager.widget.ViewPager
        android:id='@+id/voice_comm_pager'
        android:layout_width="match_parent"
        android:layout_height='0dp'
        android:layout_weight='1'
    />
</LinearLayout>
