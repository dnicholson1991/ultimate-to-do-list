<?xml version="1.0" encoding="utf-8"?>

<!-- This is the layout for a widget row in the light theme.  This will be tweaked for the dark them via software. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:id="@+id/widget_task_list_scrollable_row"
    android:minHeight="16dp"
>
	<!-- Color Bars: Only one will be visible -->
	<TextView
		android:id="@+id/widget_task_list_color_white"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/priority_none"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	<TextView
		android:id="@+id/widget_task_list_color_green"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/priority_negative"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	<TextView
		android:id="@+id/widget_task_list_color_blue"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/priority_low"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	<TextView
		android:id="@+id/widget_task_list_color_yellow"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/priority_medium"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	<TextView
		android:id="@+id/widget_task_list_color_orange"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/priority_high"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	<TextView
		android:id="@+id/widget_task_list_color_red"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/priority_top"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	<TextView
		android:id="@+id/widget_task_list_color_cyan"
	    android:layout_width="3dp"
		android:layout_height="match_parent"
		android:background="@color/cyan_light"
		android:gravity="bottom"
	  	android:layout_gravity="bottom"
	/>
	
	<!-- Spacer -->
	<TextView
		android:layout_width="3dp"
		android:layout_height="3dp"
		android:background="@android:color/transparent"
	/>

	<!-- The extra, configurable field -->
	<TextView
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="" 
  		android:textColor="@color/widget_text_color_light"
  		android:id="@+id/widget_task_list_extra"
  		android:textSize="@dimen/widget_text_size_normal" 
  		android:singleLine="true"
  		android:gravity="center_vertical"
	  	android:layout_gravity="center_vertical"
  	/>
	
	<!-- Spacer -->
	<TextView
		android:layout_width="3dp"
		android:layout_height="3dp"
		android:background="@android:color/transparent"
	/>
	
	<!-- Task Title -->
	<TextView
  		android:id="@+id/widget_task_list_title"
		android:layout_width="0dp"
  		android:layout_height="wrap_content"
  		android:text="" 
  		android:singleLine="true"
  		android:textColor="@color/widget_text_color_light"
  		android:textSize="@dimen/widget_text_size_normal"
  	    android:layout_weight="1"
  	    android:gravity="center_vertical"
	  	android:layout_gravity="center_vertical"
  	/>
</LinearLayout>