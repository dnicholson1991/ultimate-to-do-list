<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <!-- The expandable list view, containing the grouped features -->
    <ExpandableListView
        android:id='@+id/feature_list'
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider='?attr/list_divider_color'
        android:dividerHeight="1px"
        android:groupIndicator="?attr/group_indicator"
    />

    <Button
        android:id='@+id/feature_done_button'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text='@string/done'
        android:visibility="gone"
        android:textSize="?attr/utl_font_size_normal"
    />

    <com.customsolutions.android.utl.BannerAd style='@style/BannerAd' />
</LinearLayout>