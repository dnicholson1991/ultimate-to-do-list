<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
    >
   		<!-- Format 1: Every X days/weeks/months/years -->
   	    <LinearLayout
   	        android:layout_width='wrap_content'
   	        android:layout_height='wrap_content'
   	        android:orientation='horizontal'
   	        android:minHeight='48dp'
   	    >
   	        <RadioButton
   	            android:id='@+id/advanced_rep_format_1_radio'
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:gravity='center_vertical'
   	            android:layout_gravity='center_vertical'
   	            android:text='@string/Every'
   	            android:textSize='?attr/utl_font_size_normal'
   	        />
   	        <EditText 
   	            android:id='@+id/advanced_rep_format_1_increment'
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:lines="1"
				android:maxLines="1"
				android:singleLine="true"
				android:layout_gravity='center_vertical'
				android:inputType='number'
				android:paddingLeft='10dp'
				android:paddingRight='10dp'
				android:minWidth='48dp'
				android:textSize='?attr/utl_font_size_normal'
				android:hint='#'
   	        />
   	        <Spinner
   	            android:id='@+id/advanced_rep_format_1_unit'
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:layout_gravity='center_vertical'
   	            android:entries="@array/repeat_intervals_localized"
   	            android:textSize='?attr/utl_font_size_normal'
   	        />
   	    </LinearLayout>
   	    
   	    <!-- Format 2: Example: The 2nd saturday of each month -->
   	    <LinearLayout
   	        android:layout_width='wrap_content'
   	        android:layout_height='wrap_content'
   	        android:orientation='horizontal'
   	        android:minHeight='48dp'
   	    >
   	        <RadioButton
   	            android:id='@+id/advanced_rep_format_2_radio'
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:gravity='center_vertical'
   	            android:layout_gravity='center_vertical'
   	            android:text='@string/The'
   	            android:textSize='?attr/utl_font_size_normal'
   	        />
   	        <Spinner
   	            android:id='@+id/advanced_rep_format_2_location'
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:layout_gravity='center_vertical'
   	            android:entries="@array/month_locations_localized"
   	            android:paddingLeft='10dp'
   	            android:textSize='?attr/utl_font_size_normal'
   	        />
   	        <Spinner
   	            android:id='@+id/advanced_rep_format_2_dow'
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:layout_gravity='center_vertical'
   	            android:entries="@array/days_of_week_localized"
   	            android:paddingLeft='10dp'
   	            android:textSize='?attr/utl_font_size_normal'
   	        />
   	        <TextView
   	            android:layout_width='wrap_content'
   	            android:layout_height='wrap_content'
   	            android:layout_gravity='center_vertical'
   	            android:text='@string/of_each_month'
   	            android:paddingLeft='10dp'
   	            android:textSize='?attr/utl_font_size_normal'
   	        />
   	    </LinearLayout>
   	    
   	    <!-- Format 3: Example: Every Mon, Wed, Fri -->
        <RadioButton
            android:id='@+id/advanced_rep_format_3_radio'
            android:layout_width='wrap_content'
            android:layout_height='wrap_content'
            android:gravity='center_vertical'
            android:layout_gravity='center_vertical'
            android:text='@string/Every_'
            android:textSize='?attr/utl_font_size_normal'
            android:minHeight='48dp'
        />
        <LinearLayout
            android:layout_width='wrap_content'
            android:layout_height='wrap_content'
            android:orientation='vertical'
            android:paddingLeft='30dp'
        >
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_sun'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Sunday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_mon'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Monday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_tue'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Tuesday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_wed'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Wednesday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_thu'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Thursday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_fri'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Friday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_sat'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Saturday_full'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_weekday'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Weekday'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
	       	<CheckBox
	       	    android:id='@+id/advanced_rep_format_3_weekend'
	       	    android:layout_width='wrap_content'
	       	    android:layout_height='wrap_content'
	       	    android:text='@string/Weekend'
	       	    android:gravity='center_vertical'
	       	    android:textSize='?attr/utl_font_size_normal'
	       	    android:minHeight='36dp'
	       	/>
       	</LinearLayout>
    </LinearLayout>
</ScrollView>
