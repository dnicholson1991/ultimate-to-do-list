<?xml version="1.0" encoding="utf-8"?>

<!-- Use this for any activity (not fragments) that uses the app drawer -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/nav_drawer_layout"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
>
	<!-- The main content (such as a task list).  The id must be set to the same value as the list fragment -->
	<!-- in the multi-pane layouts.  This avoids problems with creating additional fragments if the screen is  -->
	<!-- rotated and we're switching from mult-pane to single pane. -->
	<FrameLayout
        android:id="@+id/ss_pane_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
	
	<!-- The contents of the drawer itself -->
	<FrameLayout
        android:id="@+id/nav_drawer_wrapper"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity='start'
    />
</androidx.drawerlayout.widget.DrawerLayout>
	
	