<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_expanded="true">
        <layer-list>
            <item
                android:top='12dp'
                android:bottom="12dp"
                android:height="24dp"
                android:left='6dp'
                android:gravity="center_vertical"
                android:drawable="@drawable/ic_chevron_up_black"
            />
        </layer-list>
    </item>
    <item android:state_empty="true">
        <layer-list>
            <item
                android:top='12dp'
                android:bottom="12dp"
                android:height="24dp"
                android:left='6dp'
                android:gravity="center_vertical"
                android:drawable="@drawable/ic_chevron_down_black"
            />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:top='12dp'
                android:bottom="12dp"
                android:height="24dp"
                android:left='6dp'
                android:gravity="center_vertical"
                android:drawable="@drawable/ic_chevron_down_black"
            />
        </layer-list>
    </item>
</selector>