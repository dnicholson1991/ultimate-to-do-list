	    <LinearLayout
	        android:id='@+id/task_list_completed_checkbox_hit_area'
	        android:layout_width="46dp"
	        android:layout_height="match_parent"
	        android:orientation='horizontal'
	        android:gravity='center_horizontal|center_vertical'
	    >
