<?xml version="1.0" encoding="utf-8"?>

<!-- This is a row for generic_list.xml.  It includes a delete button -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id='@+id/goals_list_row_container'
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:minHeight='52dp'
  	android:paddingLeft='6dp'
    android:background='?attr/cb_button_bg'
>
    <LinearLayout
        android:layout_width='0dp'
        android:layout_height='wrap_content'
        android:layout_weight='1'
        android:layout_gravity='left|center_vertical'
	    android:gravity='left|center_vertical'
	    android:orientation='vertical'
    >
	    <TextView
	        android:id='@+id/goals_list_row_name'
	        android:layout_width='wrap_content'
	        android:layout_height='wrap_content'
	        android:textSize='?attr/utl_font_size_large'
		/>
	    <TextView
	        android:id='@+id/goals_list_row_additional_info'
	        android:layout_width='wrap_content'
	        android:layout_height='wrap_content'
		/>
    </LinearLayout>
    
    <ImageButton
    	android:id='@+id/goals_list_row_delete'
    	android:src="?attr/ab_delete"
    	style='@style/ListButton'
	/>

</LinearLayout>
