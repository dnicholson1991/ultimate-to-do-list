<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
>
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
>
	<!-- Introductory Text -->
	<TextView
		android:id="@+id/widget_options_intro_text"
		android:layout_width='wrap_content'
		android:layout_height='wrap_content'
		android:gravity='center_vertical'
		android:paddingLeft='8dp'
		android:paddingRight='8dp'
		android:minHeight='48dp'
		android:text="@string/Widget_Options_Intro_"
	/>
	
	<!-- Divider -->
	<View android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="?attr/list_divider_color"
	/>

	<!-- Filter Options -->
	<TextView
	    android:id="@+id/widget_options_filter_text"
	    android:layout_width='match_parent'
	    android:layout_height='wrap_content'
	    android:minHeight='48dp'
	    android:gravity='center_vertical'
	    android:paddingLeft='8dp'
	    android:textSize='?attr/utl_font_size_large'
	    android:background='?attr/cb_button_bg'
	    android:text='@string/Edit_Filter_Rules'
	    android:drawableLeft='?attr/ab_filter'
	/>
	
	<!-- Divider -->
	<View android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="?attr/list_divider_color"
	/>
	
	<!-- Sort Order -->
	<TextView
	    android:id="@+id/widget_options_sort_text"
	    android:layout_width='match_parent'
	    android:layout_height='wrap_content'
	    android:minHeight='48dp'
	    android:gravity='center_vertical'
	    android:paddingLeft='8dp'
	    android:textSize='?attr/utl_font_size_large'
	    android:background='?attr/cb_button_bg'
	    android:text='@string/Edit_Sort_Order'
	    android:drawableLeft='?attr/ab_sort'
	/>
	
	<!-- Divider -->
	<View android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="?attr/list_divider_color"
	/>
	
	<!-- Display Options -->
	<TextView
	    android:id="@+id/widget_options_display_text"
	    android:layout_width='match_parent'
	    android:layout_height='wrap_content'
	    android:minHeight='48dp'
	    android:gravity='center_vertical'
	    android:paddingLeft='8dp'
	    android:textSize='?attr/utl_font_size_large'
	    android:background='?attr/cb_button_bg'
	    android:text='@string/Edit_Display_Options'
	    android:drawableLeft='?attr/ab_display_options'
	/>
	
	<!-- Divider -->
	<View android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="?attr/list_divider_color"
	/>
	
	<!-- Copy Settings from Another View -->
	<TextView
	    android:id="@+id/widget_options_copy"
	    android:layout_width='match_parent'
	    android:layout_height='wrap_content'
	    android:minHeight='48dp'
	    android:gravity='center_vertical'
	    android:paddingLeft='8dp'
	    android:textSize='?attr/utl_font_size_large'
	    android:background='?attr/cb_button_bg'
	    android:text='@string/Copy_from_Another_View'
	    android:drawableLeft='?attr/ab_clone'
	/>

	<!-- Divider -->
	<View android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="?attr/list_divider_color"
	/>

    <!-- Resize Instructions -->
    <TextView
        android:id="@+id/widget_options_resize_instructions"
        android:layout_width='wrap_content'
        android:layout_height='wrap_content'
        android:gravity='center_vertical'
        android:paddingLeft='8dp'
        android:paddingRight='8dp'
        android:minHeight='48dp'
        android:paddingTop='5dp'
        android:paddingBottom='5dp'
        android:text="@string/how_to_resize"
    />

    <!-- Divider -->
    <View android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="?attr/list_divider_color"
        />


</LinearLayout>
</ScrollView><!-- From: file:/C:/GDrive-dnicholson/Work/Android_Projects/UTL/uTL/src/main/res/layout/widget_options.xml -->