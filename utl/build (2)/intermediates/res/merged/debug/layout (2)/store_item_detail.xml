<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <WebView
        android:id='@+id/store_item_long_description'
        android:layout_width='match_parent'
        android:layout_height='0dp'
        android:padding='8dp'
        android:layout_weight="1"
    />

    <!-- Divider -->
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?attr/list_divider_color"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <TextView
            android:id='@+id/store_item_detail_cancel'
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.5"
            android:text='@string/Cancel'
            android:background='?attr/cb_button_bg'
            android:gravity="center"
        />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/list_divider_color"
        />

        <TextView
            android:id='@+id/store_item_detail_buy'
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.5"
            android:text='@string/purchased_with_checkmark'
            android:background='?attr/cb_button_bg'
            android:gravity="center"
        />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/GDrive-dnicholson/Work/Android_Projects/UTL/uTL/src/main/res/layout/store_item_detail.xml -->