<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background='?attr/nav_drawer_background'
    android:id="@+id/nav_drawer_fragment_top"
>
    
    <!-- In the landscape view, this has a shadow background.  It's not needed in portrait. -->
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background='?attr/nav_drawer_shadow_right'
	    android:id='@+id/nav_drawer_shadow_right_holder'
	>
	
	    <!-- The main navigation area, containing the available task and note views: -->
		<ScrollView
		  android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_weight="1"
		  android:id="@+id/nav_drawer_scrollview"
		  android:layout_gravity="start"
		>
			<LinearLayout
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:id="@+id/nav_drawer_tree_wrapper"
			>			
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/nav_drawer_initial_setup_msg"
					android:text=""
				/>
			</LinearLayout>
		</ScrollView>
	    
		<!-- A divider between the scrollable part and the bottom buttons: -->
		<LinearLayout
		    android:layout_width='match_parent'
		    android:layout_height='wrap_content'
		    android:paddingRight='5dp'
		    android:orientation='vertical'
		>
			<View 
				android:layout_width='match_parent'  
				android:layout_height='1dp'
				android:background='?attr/nav_drawer_divider_color1'  
			/>
			<View 
				android:layout_width='match_parent'  
				android:layout_height='1dp'
				android:background='?attr/nav_drawer_divider_color2'  
			/>
			<View 
				android:layout_width='match_parent'  
				android:layout_height='1dp'
				android:background='?attr/nav_drawer_divider_color3'  
			/>
		</LinearLayout>
		
		<!-- Settings, Help, and Sync Buttons - always at the bottom -->
		<LinearLayout
		    android:id='@+id/nav_drawer_bottom_buttons_wrapper'
		    android:layout_width='wrap_content'
		    android:layout_height='wrap_content'
		    android:orientation='horizontal'
		    android:paddingTop='0dp'
		    android:paddingRight='5dp'
		>
			<LinearLayout
			    android:id='@+id/nav_drawer_settings_wrap'
			    android:layout_width='0dp'
			    android:layout_height='wrap_content'
			    android:gravity='center_horizontal'
			    android:layout_weight='1'
			>
			    <TextView
			        android:id='@+id/nav_drawer_settings'
			        android:layout_width='wrap_content'
			        android:layout_height='wrap_content'
			        android:drawableLeft='?attr/nav_settings'
			        android:text='@string/Settings'
			        android:paddingLeft='6dp'
			        android:paddingTop='9dp'
			        android:paddingBottom='9dp'
			        android:paddingRight='9dp'
			        android:gravity='center_vertical'
			        android:textSize='?attr/utl_font_size_large'
			        android:layout_gravity='center_vertical'
			        android:ellipsize='end'
			    />
		    </LinearLayout>
		    <View
		        android:layout_width='1dp'
		        android:layout_height='match_parent'
		        android:background='?attr/nav_drawer_button_divider_color1'
		    />
		    <View
		        android:layout_width='1dp'
		        android:layout_height='match_parent'
		        android:background='?attr/nav_drawer_button_divider_color2'
		    />
		    <View
		        android:layout_width='1dp'
		        android:layout_height='match_parent'
		        android:background='?attr/nav_drawer_button_divider_color3'
		    />
			<LinearLayout
			    android:id='@+id/nav_drawer_help_wrap'
			    android:layout_width='0dp'
			    android:layout_height='wrap_content'
			    android:gravity='center_horizontal'
			    android:layout_weight='1'
			>
			    <TextView
			        android:id='@+id/nav_drawer_help'
			        android:layout_width='wrap_content'
			        android:layout_height='wrap_content'
			        android:drawableLeft='?attr/nav_help'
			        android:text='@string/Help'
			        android:paddingLeft='2dp'
			        android:paddingTop='9dp'
			        android:paddingBottom='9dp'
			        android:paddingRight='9dp'
			        android:gravity='center_vertical'
			        android:textSize='?attr/utl_font_size_large'
			        android:layout_gravity='center_vertical'
			        android:ellipsize='end'
			    />
		    </LinearLayout>
		    <View
		        android:layout_width='1dp'
		        android:layout_height='match_parent'
		        android:background='?attr/nav_drawer_button_divider_color1'
		    />
		    <View
		        android:layout_width='1dp'
		        android:layout_height='match_parent'
		        android:background='?attr/nav_drawer_button_divider_color2'
		    />
		    <View
		        android:layout_width='1dp'
		        android:layout_height='match_parent'
		        android:background='?attr/nav_drawer_button_divider_color3'
		    />
		    <LinearLayout
			    android:id='@+id/nav_drawer_sync_now_wrap'
			    android:layout_width='0dp'
			    android:layout_height='wrap_content'
			    android:gravity='center_horizontal'
			    android:layout_weight='1'
			>
			    <TextView
			        android:id='@+id/nav_drawer_sync_now'
			        android:layout_width='wrap_content'
			        android:layout_height='wrap_content'
			        android:drawableLeft='?attr/nav_sync_now'
			        android:text='@string/Sync_Now'
			        android:paddingLeft='6dp'
			        android:paddingTop='9dp'
			        android:paddingBottom='9dp'
			        android:paddingRight='6dp'
			        android:gravity='center_vertical'
			        android:textSize='?attr/utl_font_size_large'
			        android:drawablePadding='5dp'
			        android:layout_gravity='center_vertical'
			        android:ellipsize='end'
			        android:singleLine='true'
			    />
		    </LinearLayout>
		</LinearLayout>

		<LinearLayout
		    android:layout_width='match_parent'
		    android:layout_height='wrap_content'
		    android:paddingRight='5dp'
		    android:orientation='vertical'
		>
			<View 
				android:layout_width='match_parent'  
				android:layout_height='1dp'
				android:background='?attr/nav_drawer_divider_color1'  
			/>
			<View 
				android:layout_width='match_parent'  
				android:layout_height='1dp'
				android:background='?attr/nav_drawer_divider_color2'  
			/>
			<View 
				android:layout_width='match_parent'  
				android:layout_height='1dp'
				android:background='?attr/nav_drawer_divider_color3'  
			/>
		</LinearLayout>
			
	</LinearLayout>
</LinearLayout>
